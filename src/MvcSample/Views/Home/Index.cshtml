@{
    View.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>
<p>@View.Message</p>
<ul>
@foreach (var product in View.Products)
{
    // Note how we can use the product "Url" property here.
    // It's provided by Bandage's magic.
    <li><a href="@product.Url">@product.Name</a></li>
}
</ul>